    font-size: 1.6rem; }
  main#content h3 {
    font-size: 2rem; }
  main#content ul#posts {
    font-size: 1.8rem; }
  /* single.html styles */
  main#content header#post-header h1 {
    font-size: 2.6rem; }
  main#content img {
    max-width: 108%;
    margin-left: -3.8%; }
  main#content figure {
    margin-left: -3.8%; }
